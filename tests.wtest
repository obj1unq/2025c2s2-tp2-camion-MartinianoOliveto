test"probando accidente"{
    contenedorPortuario.cargar(knightRider)
    contenedorPortuario.cargar(bumblebee)
    residuosRadiactivos.configurarPeso(30)
    embalajeSeguridad.embalar(residuosRadiactivos)
    arenaGranel.configurarPeso(50)
    paqueteLadrillos.configurarCantidad(100)
    camion.cargar(contenedorPortuario)
    camion.cargar(embalajeSeguridad)
    camion.cargar(arenaGranel)
    camion.cargar(paqueteLadrillos)
    camion.cargar(bateriaAntiaerea)
    camion.choco()
    assert.that(bumblebee.esRobot())
    assert.equals(45, residuosRadiactivos.peso())
    assert.equals(70, arenaGranel.peso())
    assert.equals(88, paqueteLadrillos.cantidadPaquete())
    assert.notThat(bateriaAntiaerea.estaCargada())
}
